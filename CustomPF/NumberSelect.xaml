<UserControl x:Class="CustomPF.NumberSelect"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CustomPF"
             mc:Ignorable="d" 
             d:DesignHeight="24" d:DesignWidth="140">
    <Grid>
        <TextBox x:Name="value" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top" Margin="0,0,20,0" Width="120" Height="24"/>
        <Button Margin="120,0,0,12" x:Name="IncrementButton" Click="IncrementButton_Click">
            <Viewbox>
                <TextBlock Text="⮝"/>
            </Viewbox>
        </Button>
        <Button Margin="120,12,0,0" x:Name="DecrementButton" Click="DecrementButton_Click">
            <Viewbox>
                <TextBlock Text="⮟"/>
            </Viewbox>
        </Button>
    </Grid>
</UserControl>
